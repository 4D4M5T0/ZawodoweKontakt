<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="380" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aplikacjazawodowekon.Contacts">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="25" prefWidth="280" spacing="12"
              style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 2; -fx-padding: 25; -fx-background-radius: 10; -fx-border-radius: 10;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #343a40;" text="Szczegóły kontaktu" />

                <Separator prefWidth="250" style="-fx-background-color: #dee2e6;"/>

                <Label fx:id="nameLabel" style="-fx-font-size: 13px; -fx-text-fill: #495057;" text="Imię: " />
                <Label fx:id="emailLabel" style="-fx-font-size: 13px; -fx-text-fill: #495057;" text="E-mail: " />
                <Label fx:id="phoneLabel" style="-fx-font-size: 13px; -fx-text-fill: #495057;" text="Telefon: " />

                <Separator prefWidth="250" style="-fx-background-color: #dee2e6;"/>

                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Button onAction="#Back" prefWidth="70" text="Powrót"
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6;"/>
                        <Button onAction="#Edit" prefWidth="70" text="Edytuj"
                                style="-fx-background-color: #ffc107; -fx-text-fill: #212529; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6;"/>
                        <Button onAction="#Delete" prefWidth="70" text="Usuń"
                                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>