<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="350" style="-fx-background-color: linear-gradient(to bottom, #e2e8f0, #cbd5e0);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aplikacjazawodowekon.Contacts">

    <children>
        <VBox alignment="CENTER" layoutX="25" layoutY="30" prefWidth="300" spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 2);">
           <children>
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" text="Contact details" />

               <Label fx:id="nameLabel" style="-fx-font-size: 14px;" text="Name: " />
               <Label fx:id="emailLabel" style="-fx-font-size: 14px;" text="E-mail: " />
               <Label fx:id="phoneLabel" style="-fx-font-size: 14px;" text="Number: " />

               <HBox alignment="CENTER" spacing="10">
      <children>
                    <Button onAction="#Back" style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-background-radius: 6;" text="Back" />
                    <Button onAction="#Edit" style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-background-radius: 6;" text="Edit" />
                    <Button onAction="#Delete" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-background-radius: 6;" text="Delete" />
      </children>
               </HBox>
           </children>
        </VBox>
    </children>
</AnchorPane>
