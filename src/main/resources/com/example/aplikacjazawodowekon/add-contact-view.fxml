<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="320" prefWidth="380" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aplikacjazawodowekon.AddContact">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="30" prefWidth="280" spacing="12"
              style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 2; -fx-padding: 25; -fx-background-radius: 10; -fx-border-radius: 10;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #343a40;" text="Dodaj nowy kontakt" />

                <Label text="ImiÄ™ i nazwisko:" style="-fx-text-fill: #495057; -fx-font-weight: bold;"/>
                <TextField fx:id="nameField" prefWidth="230"
                           style="-fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 8;"/>

                <Label text="E-mail:" style="-fx-text-fill: #495057; -fx-font-weight: bold;"/>
                <TextField fx:id="emailField" prefWidth="230"
                           style="-fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 8;"/>

                <Label text="Telefon:" style="-fx-text-fill: #495057; -fx-font-weight: bold;"/>
                <TextField fx:id="phoneField" prefWidth="230"
                           style="-fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 8;"/>

                <HBox alignment="CENTER" spacing="15">
                    <children>
                        <Button onAction="#saveContact" prefWidth="90" text="Zapisz"
                                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8;"/>
                        <Button onAction="#cancel" prefWidth="90" text="Anuluj"
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>